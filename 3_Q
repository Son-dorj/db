SELECT MOV_TITLE FROM MOVIES M, DIRECTOR D WHERE D.DIR_ID=M.DIR_ID AND DIR_NAME='HITCHCOCK';

SELECT * FROM MOVIES WHERE MOV_ID IN (SELECT MOV_ID FROM MOVIE_CAST WHERE ACT_ID IN (SELECT ACT_ID FROM MOVIE_CAST GROUP BY ACT_ID HAVING COUNT(*)>1));

SELECT * FROM  (SELECT ACT_ID, MOV_YEAR AS FIRST FROM MOVIE_CAST C, MOVIES M WHERE M.MOV_ID=C.MOV_ID AND MOV_YEAR<2000) AS A NATURAL JOIN (SELECT ACT_ID, MOV_YEAR AS SECOND FROM MOVIE_CAST C, MOVIES M WHERE M.MOV_ID=C.MOV_ID AND MOV_YEAR>2015)AS B;

SELECT MOV_TITLE, R.MAX_RATE FROM  MOVIES M, (SELECT MOV_ID, MAX(REV_STARS)AS MAX_RATE FROM RA
TING GROUP BY MOV_ID) AS R WHERE M.MOV_ID=R.MOV_ID;

UPDATE RATING SET REV_STARS=5 WHERE MOV_ID IN (SELECT M.MOV_ID FROM MOVIES M, DIRECTOR D WHERE D.DIR_ID=M.DIR_ID AND DIR_NAME='STEVEN SPIELBERG');
