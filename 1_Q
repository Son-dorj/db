SELECT B.BOOK_ID, TITLE, PUBLISHER_NAME, AUTHOR_NAME, NO_OF_COPIES, BRANCH_ID FROM BOOK B, BOOK_AUTHORS A, BOOK_COPIES C WHERE B.BOOK_ID=A.BOOK_ID AND A.BOOK_ID=C.BOOK_ID;

SELECT * FROM CARD WHERE CARD_NO IN (SELECT CARD_NO FROM BOOK_LENDING WHERE DATE_OUT BETWEEN '2017-01-01' AND '2017-06-01' GROUP BY CARD_NO HAVING COUNT(*)>3);

DELETE FROM BOOK WHERE BOOK_ID=3;

SELECT * FROM BOOK WHERE PUB_YEAR='JUN-2016';

SELECT B.BOOK_ID, B.TITLE, X.TOTAL FROM BOOK B, (SELECT BOOK_ID, SUM(NO_OF_COPIES) AS TOTAL FROM BOOK_COPIES GROUP BY BOOK_ID) AS X WHERE X.BOOK_ID=B.BOOK_ID;
