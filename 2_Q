SELECT * FROM CUSTOMER WHERE GRADE>(SELECT AVG(GRADE) FROM CUSTOMER WHERE CITY='BANGALORE' GROUP BY CITY);

SELECT * FROM SALESMAN WHERE SALESMAN_ID IN (SELECT SALESMAN_ID FROM CUSTOMER GROUP BY SALESMAN_ID HAVING COUNT(*)>1);

SELECT S.SALESMAN_ID,'YES' AS CUSTOMER_IN_CITY  FROM SALESMAN S, CUSTOMER C WHERE S.SALESMAN_ID=C.SALESMAN_ID AND C.CITY=S.CITY UNION SELECT SALESMAN_ID,'NO' AS CUSTOMER_IN_CITY FROM SALESMAN WHERE SALESMAN_ID NOT IN (SELECT S.SALESMAN_ID FROM SALESMAN S, CUSTOMER C WHERE S.SALESMAN_ID=C.SALESMAN_ID AND C.CITY=S.CITY);

SELECT O.SALESMAN_ID,O.ORD_DATE,O.PURCHASE_AMT FROM ORDERS O,(SELECT ORD_DATE, MAX(PURCHASE_AMT) AS P FROM ORDERS GROUP BY ORD_DATE) AS X WHERE O.PURCHASE_AMT=X.P AND O.ORD_DATE=X.ORD_DATE;

DELETE FROM SALESMAN WHERE SALESMAN_ID=1000;

